{
  "name": "cds-framework",
  "version": "1.0.0",
  "description": "Convention Data Services front end framework",
  "main": "index.js",
  "scripts": {
    "scss:compile": "node-sass --include-path --source-map true --output-style compressed assets/scss/main.scss assets/css/main.css",
    "scss:watch": "node-sass --watch --recursive --include-path --source-map true --output-style compressed assets/scss/main.scss assets/css/main.css",
    "start": "npm run scss:compile && npm run scss:watch",
    "build": "npm run scss:compile"
  },
  "author": "Matthew Scott",
  "license": "ISC",
  "devDependencies": {
    "bootstrap": "^4.1.3",
    "eslint": "^5.11.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "node-sass": "^4.10.0"
  }
}
